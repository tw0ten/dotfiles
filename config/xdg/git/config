[user]
	name = tw0ten
	email = twoten.eq@gmail.com
[init]
	defaultBranch = main
	templatedir = ~/.config/git/template
[alias]
	a = add
	aa = a --all
	c = commit
	ca = c --amend
	cm = c -m
	f = fetch
	pl = pull
	ps = push
	g = clone
	gd = g --depth 1
	b = branch
	d = diff
	dh = d HEAD
	do = d origin
	du = d upstream
	r = restore
	rs = r --staged
	re = remote
	rev = re -v
	s = status
	sw = switch
	cf = config
	cfl = cf list
	l = log --decorate --numstat --graph
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	rebase = false
[commit]
	template = ~/.config/git/commit
