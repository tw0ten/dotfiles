cursor {
	xcursor-theme "default"
	xcursor-size 1
}

input {
	keyboard {
		xkb {
			layout "us,ru,cn,lt"
		}
	}
}

screenshot-path "~/temp/screenshot/%Y-%m-%d|%H:%M:%S.png"

xwayland-satellite {}

spawn-at-startup "swww-daemon"
spawn-at-startup "quickshell" "-c" "bar"
spawn-at-startup "fcitx5"

environment {
	INPUT_METHOD "fcitx"
	GTK_IM_MODULE null
	QT_IM_MODULE "wayland"
	XMODIFIERS "@im=fcitx"
}

spawn-at-startup "~/.config/niri/init"
